@{
    ViewBag.Title = "Retiro";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h3 class="fw-bold">RETIRO</h3>
        <img src="~/imagenes/user2.png" width="40" class="me-2" />
    </div>

    <!-- Saldo Actual -->
    <div class="card p-4 mb-4 shadow-sm">
        <h5 class="fw-bold">SALDO ACTUAL</h5>
        <h3 class="text-center">$12.349.999,85</h3>
    </div>

    <!-- Monto del Retiro -->
    <div class="card p-4 mb-4 shadow-sm">
        <h5 class="fw-bold">MONTO DEL RETIRO</h5>
        <div class="mb-3">
            <input type="number" class="form-control" placeholder="Ingrese el monto" required />
        </div>
    </div>

    <!-- Banco -->
    <div class="card p-4 mb-4 shadow-sm">
        <h5 class="fw-bold">BANCO</h5>
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Ingrese el banco" required />
        </div>
    </div>

    <!-- Tipo de Cuenta -->
    <div class="card p-4 mb-4 shadow-sm">
        <h5 class="fw-bold">TIPO DE CUENTA</h5>
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Ingrese el tipo de cuenta" required />
        </div>
    </div>

    <!-- Botón de Retiro -->
    <div class="text-center">
        <button class="btn btn-success fw-bold px-4 py-1">RETIRAR</button>
    </div>
</div>
