<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MJ BANK DIGITAL</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoWEB.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MJ BANK DIGITAL</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                   
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Depositar">DEPOSITAR</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Retiro">RETIRAR</a>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Prestamo">PRÉSTAMO</a>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Transaccion">TRANSACCIÓN</a>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contacto1">CONTÁCTAME</a>
                        <li class="nav-item">
                       
                   
                        </li>
                    </ul>

                    <!-- Imagen de usuario alineada a la derecha con ms-auto -->
                    <div class="dropdown ms-auto">
                        <img src="~/imagenes/icon-user.png"
                             width="40"
                             class="rounded-circle dropdown-toggle"
                             data-bs-toggle="dropdown"
                             style="cursor: pointer;"
                             title="Opciones de usuario" />

                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <form asp-controller="Cuenta" asp-action="Logout" method="post" class="px-3">
                                    <button type="submit" class="btn btn-link dropdown-item">Cerrar sesión</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
